/* pages/content/content.wxss */
.content-root{
  width: 100%;
  height: 60%;
  margin-top: 5%;
}
.weather-head-box{
  color: rgb(86, 41, 212);
  font-size: 24px;
  text-align: center;
  margin-bottom: 5%;
}
/* 天气图片 */
.weather-image-box{
  text-align: center;
  margin-bottom: 5%;
}
.weather-image{
  width: 280rpx;
  height: 280rpx;
}
/* 详细信息 */
.weather-detail-box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  text-align: center;
  margin-bottom: 8%;
}
.weather-detail{
  width: 33%;
  margin-bottom: 5%;

}
.weather-detail-value{
  margin-top: 5%;
}